<?xml version="1.0"?>
<?xml-model
  href="https://raw.githubusercontent.com/odoo/odoo/15.0/odoo/import_xml.rng"
  schematypens="http://relaxng.org/ns/structure/1.0"
  type="application/xml"?>
<odoo>
    <!-- custom list (tree) view -->
    <record id="estate_property_offer_tree_view" model="ir.ui.view">
        <field name="name">estate.property.offer.tree.view</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Offers">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button name="action_confirm" string="Confirm" type="object" icon="fa-check"/>
                <button name="action_refuse" string="Refuse" type="object" icon="fa-times"/>
            </tree>
        </field>
    </record>

     <!-- custom form view -->
     <record id="estate_property_offer_form_view" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Create Offers">
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>