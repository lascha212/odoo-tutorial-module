<?xml version="1.0"?>
<?xml-model
  href="https://raw.githubusercontent.com/odoo/odoo/15.0/odoo/import_xml.rng"
  schematypens="http://relaxng.org/ns/structure/1.0"
  type="application/xml"?>
<odoo>
    <!-- Chapter 7: custom list (tree) view -->
    <record id="estate_property_type_tree_view" model="ir.ui.view">
        <field name="name">estate.property.type.tree.view</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

     <!-- Chapter 7: custom form view -->
     <record id="estate_property_type_form_view" model="ir.ui.view">
        <field name="name">estate.property.type.form</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1><field name="name" nolabel="1"/></h1>
                </sheet>
            </form>
        </field>
    </record>
</odoo>