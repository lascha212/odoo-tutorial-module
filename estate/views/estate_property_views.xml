<?xml version="1.0"?>
<odoo>
    <!-- Chapter 7: custom list (tree) view -->
    <record id="estate_property_tree_view" model="ir.ui.view">
        <field name="name">estate.property.tree.view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Channel">
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
            </tree>
        </field>
    </record>

    <!-- Chapter 7: custom form view -->
    <record id="estate_property_form_view" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <sheet>
                    <group class="top-section">
                        <div class="left" name="left">
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </div>
                        <div class="right" name="right">
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                        </div>
                    </group>
                    <!-- notebook defines a tabbed section, pages are the tabs -->
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                            <field name="bedrooms"/>
                            <field name="living_area"/>
                            <field name="facades"/>
                            <field name="garage"/>
                            <field name="garden"/>
                            <field name="garden_area"/>
                            <field name="garden_orientation"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Chapter 6 -->
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>